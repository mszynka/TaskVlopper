@model TaskVlopper.Models.MeetingViewModel

<h5>Model editor</h5>

@Html.ValidationSummary(true)

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(p => p.Meeting.ProjectID, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(p => p.Meeting.ProjectID, new { @class = "form-control", placeholder = "ProjectID" })
            @Html.ValidationMessageFor(p => p.Meeting.ProjectID)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Meeting.TaskID, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextAreaFor(p => p.Meeting.TaskID, new { @class = "form-control", placeholder = "TaskID" })
            @Html.ValidationMessageFor(p => p.Meeting.TaskID)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Meeting.DateAndTime, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            <div class='input-group date hasDatepicker'>
                @Html.TextBoxFor(p => p.Meeting.DateAndTime, new { @class = "form-control", placeholder = "Date and time" })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
            @Html.ValidationMessageFor(p => p.Meeting.DateAndTime)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Meeting.Title, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(p => p.Meeting.Title, new { @class = "form-control", placeholder = "Title" })
            @Html.ValidationMessageFor(p => p.Meeting.Title)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Meeting.Description, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(p => p.Meeting.Description, new { @class = "form-control", placeholder = "Description" })
            @Html.ValidationMessageFor(p => p.Meeting.Description)
        </div>
    </div>

    <div class="col-sm-8 col-sm-push-4">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</div>
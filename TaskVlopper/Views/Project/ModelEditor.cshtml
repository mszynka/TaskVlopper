@model TaskVlopper.Models.ProjectViewModel

<h5>Model editor</h5>

@Html.ValidationSummary(true)

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(p => p.Project.Name, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(p => p.Project.Name, new { @class = "form-control", placeholder = "Name" })
            @Html.ValidationMessageFor(p => p.Project.Name)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Project.Description, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextAreaFor(p => p.Project.Description, new { @class = "form-control", placeholder = "Description" })
            @Html.ValidationMessageFor(p => p.Project.Description)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Project.StartDate, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            <div class='input-group date hasDatepicker'>
                @Html.TextBoxFor(p => p.Project.StartDate, new { @class = "form-control", placeholder = "Start date" })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
            @Html.ValidationMessageFor(p => p.Project.StartDate)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Project.Deadline, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            <div class='input-group date hasDatepicker'>
                @Html.TextBoxFor(p => p.Project.Deadline, new { @class = "form-control", placeholder = "Due date" })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
            @Html.ValidationMessageFor(p => p.Project.Deadline)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Project.EstimatedTimeInHours, new { @class = "col-sm-4 control-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(p => p.Project.EstimatedTimeInHours, new { @class = "form-control", placeholder = "Estimated hours", type = "number", min = "0" })
            @Html.ValidationMessageFor(p => p.Project.EstimatedTimeInHours)
        </div>
    </div>

    <div class="col-sm-8 col-sm-push-4">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</div>